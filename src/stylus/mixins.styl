cell-dimensions(v)
  width "calc((%s - 6px) / 9)" % v
  height @width
  line-height @width

button()
  display inline-block
  outline 0
  border 1px solid $color-edit
  border-radius 2px
  cursor pointer
  color $color-text
  font-size 1em
  width 100%

button-color(bg-color)
  background-color bg-color
  &:hover
    background-color lighten(@background-color, 10)
