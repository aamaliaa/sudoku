@import '../../node_modules/nib'
@import 'variables'
@import 'mixins'

*
  box-sizing border-box

body
  margin 0
  padding 0
  font-family Helvetica, Arial, sans-serif
  font-size 1.4em
  background-color $color-bg
  color $color-text

  @media (max-width 400px)
    font-size 1.2em

.btn
  button()
  button-color($color-btn)
  &.btn-blue
    button-color($color-blue)
  &.btn-maroon
    button-color($color-red)

  @media (max-width 400px)
    font-size 0.8rem

#sudoku
  position absolute
  margin 0 auto
  top 10px
  right 0
  bottom 0
  left 0
  clearfix()

  @media (max-width 600px)
    width 100vmin
  @media (min-width 601px)
    width 85vmin

#board
  width 100%

.square, .cell
  float left
  display inline-block
  border 1px solid $color-text

  &:nth-child(3n+1)
    clear both

.cell
  text-align center
  transition background 0.25s ease-in-out

  @media (max-width 600px)
    cell-dimensions(100vmin)
  @media (min-width 601px)
    cell-dimensions(85vmin)

  &.wrong
    background-color $color-wrong !important
    input
      color $color-bg

  &.editable
    color $color-edit
    &:hover
      background-color $color-hover

  &.verified
    background-color $color-verified

  input
    display inline-block
    height 100%
    width 100%
    line-height 100%
    font-size 1.4rem
    border 0
    text-align center
    background-color transparent
    color $color-edit
    outline 0

    @media (max-width 400px)
      font-size 1.2rem

.controls
  display flex
  margin 0
  padding 10px 0
  height 60px
  width 100%
  flex-direction row
  flex-wrap nowrap

  .btn
    margin-right 10px
    flex 1

    &:last-child
      margin-right 0

.title
  margin 0
  padding 0
  text-align center

  &:before, &:after
    content ""
    position relative
    display inline-block
    width 25%
    height 2px
    vertical-align middle
    background $color-text

  &:before
    left -.5em
    margin 0 0 0 -50%

  &:after
    left .5em
    margin 0 -50% 0 0
