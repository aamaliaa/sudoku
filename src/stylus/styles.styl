@import '../../node_modules/nib'
@import 'variables'
@import 'mixins'

*
  box-sizing border-box

body
  font-family Helvetica, Arial, sans-serif
  font-size 1.4em
  margin 0
  padding 0

#board
  position absolute
  margin 0 auto
  top 0
  right 0
  bottom 0
  left 0
  clearfix()

  @media (max-width: 600px)
    width 100vmin
  @media (min-width: 601px)
    width 85vmin

.square, .cell
  float left
  display inline-block
  border 1px solid black

  &:nth-child(3n+1)
    clear both

.cell
  text-align center
  transition background 0.25s ease-in-out

  @media (max-width: 600px)
    cell-dimensions(100vmin)
  @media (min-width: 601px)
    cell-dimensions(85vmin)

  &.wrong
    background-color $color-wrong !important
    input
      color white

  &.editable
    color $color-edit
    &:hover
      background-color $color-hover

  &.verified
    background-color $color-verified

  input
    display inline-block
    width 100%
    font-size 1.4rem
    border 0
    text-align center
    background-color transparent
    color $color-edit
    outline 0
